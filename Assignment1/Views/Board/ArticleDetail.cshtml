@using HomePage.Models
@model ArticleViewModel
@{
    Articles article = Model.Article;   
    ViewBag.Title = "ArticleDetail";
    Layout = "~/Views/Shared/_SideBarLayoutPage.cshtml";
}

<style>
    td:nth-child(1) {
        width: 50px;
    }

    tr:nth-child(4) {
        height: 200px;
    }
</style>

<!-- Page Heading/Breadcrumbs -->
<h1 class="mt-4 mb-3">F&A</h1>

<ol class="breadcrumb">
    <li class="breadcrumb-item">
        <a href="/Home/Index">Home</a>
    </li>
    <li class="breadcrumb-item active">F&A</li>
    <li class="breadcrumb-item active">Inquiry List</li>
    <li class="breadcrumb-item active">Inquiry Detail</li>
</ol>

<!-- Content Row -->
<div class="row">
    <!-- Sidebar Column -->
    <div class="col-lg-3 mb-4">
        <div class="list-group">
            <a href="/Board/Create" class="list-group-item">New Inquiry</a>
            <a href="/Board/ArticleList" class="list-group-item active">Inquiry List</a>
        </div>
    </div>
    <!-- Content Column -->
    <div class="col-lg-9 mb-4">
        <table class="table table-bordered">
            <tbody>
                <tr>
                    <td width="10%">Title</td>
                    <td width="90%">@article.Title</td>
                </tr>
                <tr>
                    <td width="10%">View Cnt</td>
                    <td width="90%">@article.ViewCnt</td>
                </tr>
                <tr>
                    <td>User ID</td>
                    <td>@article.RegistMemberID</td>
                </tr>
                <tr>
                    <td>Contents</td>
                    <td>@article.Contents</td>
                </tr>
                <tr>
                    <td>Image</td>
                    <td>
                        @if (Model.Files.Count > 0)
                        {
                            foreach (var file in Model.Files)
                            {
                                <img src="@file.FilePath@file.FileName" width="100" height="100" />
                            }
                        }
                    </td>
                    @*<td><img src="@Model.Files[0].FilePath@Model.Files[0].FileName" width="100" height="100" /></td>*@
                </tr>
            </tbody>
        </table>
        <button type="button" class="btn btn-primary" id="Btn" onclick="relocation();">Edit</button>
    </div>
</div>
<!-- /.row -->

@section Scripts{
    <script>
        function relocation() {
            var param = getParameterByName('articleid');
            window.location.href = "/Board/ArticleEdit?articleid=" + param;
        }
    </script>

}


